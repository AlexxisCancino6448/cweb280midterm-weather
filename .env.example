# Port and environment
PORT=4000
NODE_ENV=development

# SQLite file for development; tests should use ':memory:'
DATABASE_FILENAME=./data/dev.sqlite

# JWT config (replace in .env with a secure secret)
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=1h

# Weather API key (optional for local testing)
WEATHERSTACK_KEY=your_weatherstack_key
