{
  "name": "cweb280midterm-weather",
  "version": "1.0.0",
  "description": "CWEB280 midterm backend",
  "main": "src/server.js",
  "scripts": {
    "db:setup": "node src/migrations/ensureSchema.js",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest --runInBand --detectOpenHandles",
    "dev:backend": "cd . && PORT=4000 npm run dev --prefix .",
    "dev:frontend": "npm --prefix client run dev",
    "dev:all": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "build:frontend": "npm --prefix client run build"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.5.1",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/tests/setupTestEnv.js"
    ],
    "testEnvironment": "node"
  }
}
